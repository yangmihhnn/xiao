/**index.wxss**/
.container{
  margin: 0;
  height: 100%;
  padding: 0 0;

}
.dialog-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 125rpx;
  width: 100%;
  border-bottom-style: solid;
  border-width: 1rpx;
  border-color: lightgray;
}

.dialog-item .avatar {
  border-radius: 50%;
  width:125rpx;
  height: 125rpx;

}

.dialog-item .preview {
  /*color: #aaa;*/
  width: 625rpx;
  height: 125rpx;
  color: black;
}

.dialog-item .avatar image{
  height: 70%;
  width: 70%;
  padding:15% 15% 15% 15%;
}
.dialog-item .preview .up{
  width: 100%;
  height: 62.5rpx;
  flex-direction: column;
}
.dialog-item .preview .down{
  width: 100%;
  height: 62.5rpx;
  color: gray;
  
}
.dialog-item .preview .up .sender{
  float:left;
  line-height: 62.5rpx;
  /*font-weight: bold;*/
  font-size: large;
  /*font-family:  monospace;*/
}

.dialog-item .preview .up .time{
  float: right;
  line-height: 62.5rpx;
  font-size: small;
  /*font-family: times;*/
}